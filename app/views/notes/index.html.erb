<div class="my-5 py-5">

<div class="mx-5 recruit-index-card">
  <div class="mt-1 mb-5 container recruit-index">

    <h1>Our Notes Catalog</h1>

      <table class="table table-striped table-hover" id="recruit-index">
        <thead>
          <th>Date</th>
          <th>Coach</th>
          <th>Recruit</th>
          <th>Content</th>
        </thead>

        <tbody>

          <% @schedule_events.each do |sch_event| %>
            <tr>
              <% if sch_event.user %>
              <td>
              <a href="/events/<%= sch_event.event.id %>">
                <%= sch_event.event.start_date.strftime("%A, %B %d") %>
              </a>
              </td>
              <td>
                <%= image_tag sch_event.user.photo, class: 'avatar-small mr-2' %>
                <%= sch_event.user.first_name.upcase %> <%= sch_event.user.last_name.upcase %>
              </td>
               <% recruit = sch_event.event.recruits.first %>
                <% case recruit.athlete.grad_year %>
                <% when 2022 %>
                  <td class="text-left grad_year">
                    <a href="/athletes/<%= recruit.athlete.id %>" class="text-danger">
                    <%= recruit.athlete.first_name %> <%= recruit.athlete.last_name %>
                    </a>
                  </td>

                <% when 2023 %>
                  <td class="text-left grad_year">
                    <a href="/athletes/<%= recruit.athlete.id %>" class="text-primary">
                    <%= recruit.athlete.first_name %> <%= recruit.athlete.last_name %>
                    </a>
                    </td>
                <% when 2024 %>
                  <td class="text-left grad_year">
                   <a href="/athletes/<%= recruit.athlete.id %>" class='text-info'>
                    <%= recruit.athlete.first_name %> <%= recruit.athlete.last_name %>
                    </a>
                    </td>
                <% when 2025 %>
                  <td class="text-left grad_year">
                    <a href="/athletes/<%= recruit.athlete.id %>" class='text-success'>
                    <%= recruit.athlete.first_name %> <%= recruit.athlete.last_name %>
                    </a>
                    </td>
                <% end %>
              <td>
                <ol class="text-left">
                <% if sch_event.event.notes %>
                <% sch_event.event.notes.each do |note| %>
                  <li class="text-left"><%= note.content %></li>
                <% end %>
                <% end %>
                </ol>
              </td>
              <% end %>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
