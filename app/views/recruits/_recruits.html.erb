<div class=" mt-3 recruit-index-card">
  <div class="mt-2 mb-5 container recruit-index-table">

                   <!--  <div class="table-responsive"> -->
        <div class="recruit-index-top-table container">
          <div class="btn-group d-flex justify-content-between align-items-center w-70">
            <% if policy(@recruit).create? %>
              <%= link_to 'Schedule', schedules_path, class: "gen-sch btn-sm p-2 rounded" %>
            <% end %>
            <h1 class="dashboard-recruit-heading">My Recruits</h1>
            <%= link_to 'Detailed List', recruits_path, class: "full-li btn-sm p-2 rounded" %>
          </div>
        </div>


    <div class="table-responsive">

      <table class="table table-striped table-hover table-sm" id="dashboard_recruit">

        <thead>
          <tr class="athlete-table-header">
            <th>Name</th>
            <th>Graduation Year</th>
            <% if policy(@recruit).destroy? %>
              <th>
                Remove
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @recruits.each do |recruit| %>

            <% case recruit.athlete.grad_year %>
              <% when 2022 %>
                <tr class="recruit-table-content table-danger">
                  <td>
                    <%= link_to athlete_path(recruit.athlete) do %>
                      <div class='d-flex justify-content-start'>
                          <%= image_tag recruit.athlete.photo, class: 'avatar-small' %>
                        <span class='name d-flex ml-4'>
                          <%= recruit.athlete.first_name %> <%= recruit.athlete.last_name %>
                        </span>
                      </div>
                    <% end %>
                  </td>
                  <td class="text-center grad_year"><%= recruit.athlete.grad_year %></td>
                  <td class="text-center">
                    <% if policy(@recruit).destroy? %>
                      <%= link_to recruit_path(recruit), method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
                       <i class="fas fa-trash-alt"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>

              <% when 2023 %>
                <tr class="recruit-table-content table-primary">
                  <td>
                  <%= link_to athlete_path(recruit.athlete) do %>
                    <div class='d-flex justify-content-start'>
                      <%= image_tag recruit.athlete.photo, class: 'avatar-small' %>
                      <span class='name d-flex ml-4'>
                        <%= recruit.athlete.first_name %> <%= recruit.athlete.last_name %>
                      </span>
                    </div>
                  <% end %>
                  </td>
                  <td class="text-center grad_year"><%= recruit.athlete.grad_year %></td>
                  <td class="text-center">
                    <% if policy(@recruit).destroy? %>
                      <%= link_to recruit_path(recruit), method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>

              <% when 2024 %>
                <tr class="recruit-table-content table-info">
                  <td>
                  <%= link_to athlete_path(recruit.athlete) do %>
                    <div class='d-flex justify-content-start'>
                      <%= image_tag recruit.athlete.photo, class: 'avatar-small' %>
                      <span class='name d-flex ml-4'>
                        <%= recruit.athlete.first_name %> <%= recruit.athlete.last_name %>
                      </span>
                    </div>
                  <% end %>
                  </td>
                  <td class="text-center grad_year"><%= recruit.athlete.grad_year %></td>
                  <td class="text-center">
                    <% if policy(@recruit).destroy? %>
                      <%= link_to recruit_path(recruit), method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
                       <i class="fas fa-trash-alt"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>

              <% when 2025 %>
                <tr class="recruit-table-content table-success">
                  <td>
                  <%= link_to athlete_path(recruit.athlete) do %>
                    <div class='d-flex justify-content-start'>
                      <%= image_tag recruit.athlete.photo, class: 'avatar-small' %>
                      <span class='name d-flex ml-4'>
                        <%= recruit.athlete.first_name %> <%= recruit.athlete.last_name %>
                      </span>
                    </div>
                  <% end %>
                  </td>
                  <td class="text-center grad_year"><%= recruit.athlete.grad_year %></td>
                  <td  class="text-center">
                    <% if policy(@recruit).destroy? %>
                      <%= link_to recruit_path(recruit), method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>

            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
