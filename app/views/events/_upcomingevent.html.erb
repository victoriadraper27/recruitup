<div class="mt-2 event-card">
<div class="my-1 mx-2 d-flex justify-content-center">
  <div class='event-show-card'>

    <div class="d-flex justify-content-center">
      <p class="upcoming-event-header mr-4">
        <%= link_to event_url(params[:id].to_i - 1), class: "event-show-color" do %>
         <i class="fas fa-arrow-circle-left"></i>
        <% end %>
      </p>
      <h2 class="upcoming-event-header">
        <%= @event.start_date.strftime("%A, %B %d") %> at <%= @event.start_time.strftime("%I:%M %p") %>
      </h2>
      <p class="upcoming-event-header ml-4">
        <%= link_to event_url(params[:id].to_i + 1), class: "event-show-color" do %>
          <i class="fas fa-arrow-circle-right"></i>
        <% end %>
      </p>
    </div>

    <div class="event-show-middle p-3">

<!--         <div class="event-show-left mr-3"> -->
        <p class="upcoming-event-address"><%= @event.address%></p>
<!--         <div
          id="map"
          style="width: 100%;
          height: 300px;"
          data-markers="<%#= @marker.to_json %>"
          data-mapbox-api-key="<%#= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div> -->

        <div class="event-show-card-per-athlete">

          <% @event.recruits.each do |recruit| %>
            <%= link_to athlete_path(recruit.athlete) do %>
              <% if recruit.athlete.grad_year == 2022 %>
                <a href="/athletes/<%= recruit.athlete.id %>" class="calendar list-group-item list-group-item-action list-group-item-danger d-flex justify-content-left">
                  <%= image_tag recruit.athlete.photo, class: "upcoming-avatar mr-3" %>
                  <p><%= recruit.athlete.first_name %>  <%= recruit.athlete.last_name %></p>
                    <p class="upcoming-rating"><i class="fa fa-arrow-up"></i> <%= recruit.athlete.rating %></p>
                    <p class="text-white"><%= recruit.athlete.grad_year %></p>
                </a>
              <% elsif recruit.athlete.grad_year == 2023 %>
                <a href="/athletes/<%= recruit.athlete.id %>" class="calendar list-group-item list-group-item-action list-group-item-primary d-flex justify-content-left">
                  <%= image_tag recruit.athlete.photo, class: "upcoming-avatar mr-3" %>
                  <p><%= recruit.athlete.first_name %>  <%= recruit.athlete.last_name %></p>
                  <p class="upcoming-rating"><i class="fa fa-arrow-up"></i> <%= recruit.athlete.rating %></p>
                  <p class="text-white"><%= recruit.athlete.grad_year %></p>
                </a>
              <% elsif recruit.athlete.grad_year == 2024 %>
                <a href="/athletes/<%= recruit.athlete.id %>" class="calendar list-group-item list-group-item-action list-group-item-info d-flex justify-content-left">
                  <%= image_tag recruit.athlete.photo, class: "upcoming-avatar mr-3" %>
                  <p><%= recruit.athlete.first_name %>  <%= recruit.athlete.last_name %></p>
                  <p class="upcoming-rating"><i class="fa fa-arrow-up"></i> <%= recruit.athlete.rating %></p>
                  <p class="text-white"><%= recruit.athlete.grad_year %></p>
                </a>
              <% else %>
                <a href="/athletes/<%= recruit.athlete.id %>" class="calendar list-group-item list-group-item-action list-group-item-success d-flex justify-content-left">
                  <%= image_tag recruit.athlete.photo, class: "upcoming-avatar mr-3" %>
                  <p><%= recruit.athlete.first_name %>  <%= recruit.athlete.last_name %></p>
                  <p class="upcoming-rating"><i class="fa fa-arrow-up"></i> <%= recruit.athlete.rating %></p>
                  <p class="text-white"><%= recruit.athlete.grad_year %></p>
                </a>
              <% end %>
            <% end %>
          <% end %>

          <h2 class="m-1" style="text-align: center;">VS.</h2>

          <%= link_to athlete_path(@athlete) do %>
            <% if @athlete.grad_year == 2022 %>
              <a href="/athletes/<%= @athlete.id %>" class="calendar list-group-item list-group-item-action list-group-item-danger d-flex justify-content-left">
                <%= image_tag athlete.photo, class: "upcoming-avatar mr-3" %>
                <p><%= @athlete.first_name %>  <%= @athlete.last_name %></p>
                <p class="upcoming-rating"><i class="fa fa-arrow-up"></i> <%= @athlete.rating %></p>
                <p class="text-white"><%= @athlete.grad_year %></p>
              </a>
            <% elsif @athlete.grad_year == 2023 %>
              <a href="/athletes/<%= @athlete.id %>" class="calendar list-group-item list-group-item-action list-group-item-primary d-flex justify-content-left">
                <%= image_tag athlete.photo, class: "upcoming-avatar mr-3" %>
                <p><%= @athlete.first_name %>  <%= @athlete.last_name %></p>
                <p class="upcoming-rating"><i class="fa fa-arrow-up"></i> <%= @athlete.rating %></p>
                <p class="text-white"><%= @athlete.grad_year %></p>
              </a>
            <% elsif @athlete.grad_year == 2024 %>
              <a href="/athletes/<%= @athlete.id %>" class="calendar list-group-item list-group-item-action list-group-item-info d-flex justify-content-left">
                <%= image_tag athlete.photo, class: "upcoming-avatar mr-3" %>
                <p><%= @athlete.first_name %>  <%= @athlete.last_name %></p>
                <p class="upcoming-rating"><i class="fa fa-arrow-up"></i> <%= @athlete.rating %></p>
                <p class="text-white"><%= @athlete.grad_year %></p>
              </a>
            <% else %>
              <a href="/athletes/<%= @athlete.id %>" class="calendar list-group-item list-group-item-action list-group-item-success d-flex justify-content-left">
                <%= image_tag athlete.photo, class: "upcoming-avatar mr-3" %>
                <p><%= @athlete.first_name %>  <%= @athlete.last_name %></p>
                <p class="upcoming-rating"><i class="fa fa-arrow-up"></i> <%= @athlete.rating %></p>
                <p class="text-white"><%= @athlete.grad_year %></p>
              </a>
            <% end %>
          <% end %>


        </div>
    </div>
  </div>
</div>
</div>
